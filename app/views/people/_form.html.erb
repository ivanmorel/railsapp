<%= form_for @person do |f| %>
    <table>
      <tr>
        <td>First Name: </td>
        <td><%= f.text_field :first_name %></td>
      </tr>
      <tr>
        <td>Last Name: </td>
        <td><%= f.text_field :last_name %></td>
      </tr>
      <tr>
        <td><%= f.submit %></td>
      </tr>
    </table>
<% end %>
