<h2>New Article</h2>
<h3>Title</h3>
<form>
  <input type="text" name="title">
  <h3>Article</h3>
  <textarea rows="20" cols="50" name="article"></textarea><br>
  <input type="submit">
</form>
<%= @params %>
<% if $articles.size> 0 %>
    <% $articles.each do |article| %>
      <h2>Title</h2>
      <%= article[:title] %>
      <h2>Article</h2>
      <%= article[:article] %>
    <% end %>
<% end %>